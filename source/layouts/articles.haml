!!! 5
%html
  %head
    %title
      =current_article ? current_article.title : 'Articles'
      = "| APIs You Won't Hate"
    = partial 'partials/head'

%body

%header.section.section--primary
  .container
    %h1 APIs You Won't Hate

    %section.navigation{:role => "banner"}
      .navigation-wrapper
        %nav{:role => "navigation"}
          %ul#js-navigation-menu.navigation-menu.show
            %li.nav-link
              %a{href: "/articles.html", class: 'btn'} Articles
            %li.nav-link
            %a{href: "/", class: 'btn'} Book

= yield

%section#subscribe.section.section--medium.section--secondary
  .container.container--medium
    %h6.text-center Get pragmatic API, HTTP and REST info monthly!

    %form.form-inline{ action: "//apisyouwonthate.us10.list-manage.com/subscribe/post?u=f5c5ff66d95d11dec1b88cf54&amp;id=f4b69a177b", method: "post", name: "mc-embedded-subscribe-form", novalidate: "", target: "_blank"}
      %input.email{ name: "EMAIL", type: "email", value: "", placeholder: "E-mail"}
      %input.btn.btn--primary.btn--large{name: "subscribe", type: "submit", value: "Subscribe"}

= partial "partials/footer"
